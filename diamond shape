#include <stdio.h>

int main() {
    // Write C code here
int i,j,k,n;
scanf("%d",&n);
for(i=1;i<=n;i++)
{
    for(k=i;k<=n-1;k++)
      printf(" ");
    for(j=1;j<=i;j++)
    {
        printf("* ");
    }
    printf("\n");
}
for(i=n-1;i>=1;i--)
{
    for(k=i;k<=n-1;k++)
      printf(" ");
    for(j=1;j<=i;j++)
    {
        printf("* ");
    }
    printf("\n");
}
}
